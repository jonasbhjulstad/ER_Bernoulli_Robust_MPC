#ifndef FROLS_PATH_CONFIG_HPP
#define FROLS_PATH_CONFIG_HPP

#include <string>
#include <sstream>

namespace FROLS {
// const char *FROLS_ROOT_DIR = "@PROJECT_ROOT_DIR@";
// const char *FROLS_INCLUDE_DIR = "@FROLS_INCLUDE_DIR@";
    const char *FROLS_DATA_DIR = "@FROLS_DATA_DIR@";
    const char *FROLS_LOG_DIR = "@FROLS_LOG_DIR@";


    std::string MC_filename(uint16_t N_pop, double p_ER, uint16_t iter, std::string network_type) {
        std::stringstream ss;
        ss << FROLS_DATA_DIR << "/Bernoulli_" << network_type << "_MC_" << N_pop << "_" << p_ER << "_" << iter
           << ".csv";
        return ss.str();
    }
    std::string quantile_filename(uint16_t N_pop, double p_ER, uint16_t iter, std::string network_type) {
        std::stringstream ss;
        ss << FROLS_DATA_DIR << "/Quantile_Bernoulli_" << network_type << "_MC_" << N_pop << "_" << p_ER << "_" << iter
           << ".csv";
        return ss.str();
    }


} //FROLS
#endif